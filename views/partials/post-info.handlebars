    <article class="post">
      <div class="title">
        <a href="{{post.post_url}}" target="_blank">{{title}}</a>
        <span>({{post.post_url}})</span>
      </div>
      <div class="meta">
        {{vote_count}} point(s) by {{user.username}} on
        {{created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>